{
  "name": "secret-hitler-pants",
  "description": "Minimalistic Secret Hitler web server",
  "keywords": [
    "secret-hitler",
    "game",
    "party"
  ],
  "version": "0.2.1",
  "private": true,
  "license": "cc-by-nc-sa-4.0",
  "scripts": {
    "build": "rimraf .cache dist && tsc -p tsconfig.server.json && parcel build ./app/index.html --public-url /-/ --out-dir dist/app",
    "start": "node dist/server",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev src",
    "test": "npm run lint && jest",
    "test:watch": "jest --watch",
    "lint": "eslint \"src/**/*.ts\" \"app/**/*.ts\" \"app/**/*.tsx\" && tsc --noEmit"
  },
  "engines": {
    "node": "10.x"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.21",
    "@types/parcel-bundler": "^1.12.3",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/seedrandom": "^2.4.28",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.18.0",
    "eslint-plugin-react": "^7.22.0",
    "jest": "^26.6.3",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2",
    "sass": "^1.32.4",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "seedrandom": "^3.0.5",
    "ws": "^7.4.2"
  }
}
